body{margin:0}.projects{min-height:100vh;padding:100px 50px 50px;display:flex;justify-content:center;background-color:var(--grey);color:var(--white)}.projects .content{width:100%;max-width:1700px;display:flex;flex-direction:column;align-items:center;gap:25px}.projects .content .grid{display:flex;justify-content:center;align-items:center;flex-wrap:wrap;gap:25px}.projects .content .grid .grid-item{position:relative;width:100%;max-width:500px;display:flex;flex-direction:column;align-items:center;gap:10px;text-align:center;transition:all .25s ease-out}.projects .content .grid .grid-item:hover{transform:scale(105%)}.projects .content .grid .grid-item h3,.projects .content .grid .grid-item p{margin:0}.projects .content .grid .grid-item .video-thumbnail{width:100%;aspect-ratio:16/9;object-fit:cover;border-radius:10px}.projects .content .grid .grid-item a{position:absolute;top:0;left:0;width:100%;height:100%}@media screen and (max-width:768px){.projects{padding:125px 10px 50px}}.project{min-height:100vh;max-height:fit-content;padding:200px 50px 50px;display:flex;justify-content:center;text-align:center;background-size:cover;background-attachment:fixed;background-position:50%}.project .content{width:100%;max-width:1000px;display:flex;flex-direction:column;align-items:center;gap:25px}.project .content .video{width:100%;max-width:1000px;aspect-ratio:16/9}.project .content .video iframe{border-radius:10px}.project .content .description{max-width:75ch;text-wrap:balance}.project .content .description a{text-decoration:underline;color:var(--white)}.project .content .links{display:flex;gap:10px}@media screen and (max-width:768px){.project{padding:125px 10px 50px}}